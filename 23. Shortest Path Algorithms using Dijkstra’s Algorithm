#include <stdio.h>
#define INF 9999
#define MAX 20
int main() {
    int n, adj[MAX][MAX], visited[MAX];
    int i,j,ne=0, u,v, min, total=0;
    printf("Enter number of vertices: ");
    scanf("%d",&n);
    printf("Enter adjacency matrix (0 if no edge):\n");
    for (i=0;i<n;i++)
        for (j=0;j<n;j++) {
            scanf("%d",&adj[i][j]);
            if (adj[i][j]==0) adj[i][j]=INF;
        }
    for (i=0;i<n;i++) visited[i]=0;
    visited[0]=1;
    printf("Edges in MST:\n");
    while (ne < n-1) {
        min=INF;
        for (i=0;i<n;i++)
            if (visited[i])
                for (j=0;j<n;j++)
                    if (!visited[j] && adj[i][j]<min) {
                        min=adj[i][j];
                        u=i; v=j;
                    }
        printf("%d - %d = %d\n",u,v,min);
        total+=min;
        visited[v]=1;
        ne++;
    }
    printf("Total weight = %d\n",total);
    return 0;
}
