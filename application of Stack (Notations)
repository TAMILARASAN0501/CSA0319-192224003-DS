#include <stdio.h>
#include <ctype.h>
#define MAX 100
char stack[MAX];
int top=-1;
void push(char c){ stack[++top]=c; }
char pop(){ return stack[top--]; }
int prec(char c){
    if (c=='+'||c=='-') return 1;
    if (c=='*'||c=='/'||c=='%') return 2;
    if (c=='^') return 3;
    return 0;
}
int main() {
    char infix[100], postfix[100], ch;
    int i=0, j=0;
    printf("Enter infix: ");
    scanf("%s", infix);
    while ((ch=infix[i++])!='\0') {
        if (isalnum(ch)) postfix[j++]=ch;
        else if (ch=='(') push(ch);
        else if (ch==')') {
            while (top!=-1 && stack[top]!='(')
                postfix[j++]=pop();
            pop(); // remove '('
        } else {
            while (top!=-1 && prec(stack[top])>=prec(ch))
                postfix[j++]=pop();
            push(ch);
        }
    }
    while (top!=-1) postfix[j++]=pop();
    postfix[j]='\0';
    printf("Postfix: %s\n", postfix);
    return 0;
}
